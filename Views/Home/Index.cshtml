@{
    Layout = "_Layout";              // forces layout for this view
    ViewData["Title"] = "Home";
}
<div id="map" style="width:100%; height:60vh; border:1px solid #ccc; border-radius:.5rem;"></div>

<h4 class="mt-3" id="forecastTitle" style="display:none;">
    7-Day Forecast <span id="cityState" class="text-muted"></span>
</h4>

<style>
    .forecast-grid { display:grid; grid-template-columns: repeat(7, 1fr); gap:.5rem; }
    .forecast-cell { border:1px solid #e4e4e7; border-radius:.5rem; padding:.5rem; background:#fff; min-height:92px; }
    .forecast-cell h6 { font-size:.85rem; margin:0 0 .25rem; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }
    .forecast-mini { display:flex; align-items:center; gap:.4rem; font-size:.85rem; line-height:1.1; }
    .forecast-mini img { width:28px; height:28px; object-fit:contain; }
    .temp { font-weight:700; }
    .muted { color:#6b7280; font-size:.8rem; }
</style>

<div id="topRow" class="forecast-grid mb-1"></div>
<div id="bottomRow" class="forecast-grid"></div>
